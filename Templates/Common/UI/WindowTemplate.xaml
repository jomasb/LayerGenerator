<plus:PlusRootWindow
	x:Class="Dcx.Plus.UI.WPF.Modules.$Product$.Windows.$Dialog$.$Dialog$Window"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:Dcx.Plus.UI.WPF.Modules.$Product$.Windows.$Dialog$"
	xmlns:localization="clr-namespace:Dcx.Plus.UI.WPF.FW.Shell.Localization;assembly=Dcx.Plus.UI.WPF.FW.Shell"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:plus="http://schemas.abatplus.de/xaml"
	x:Name="RootWindow"
	SpecificTitle="{localization:Localize Key=$Product$$Dialog$_lblCaption, Source=$Product$Localizer}"
	WindowState="Maximized"
	d:DesignHeight="1080"
	d:DesignWidth="1920"
	mc:Ignorable="d">

	<local:$Dialog$View />

</plus:PlusRootWindow>